<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:spinnerDropDownItemStyle">@style/MySpinner</item>
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/app_color</item>
    </style>

    <style name="MySpinner" parent="@android:style/Widget.Holo.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/app_color</item>    
    </style>

    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">#ffffff</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="color" parent="@android:style/Widget">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>